{
	"name": "svelte-persistent-runes",
	"version": "2.0.0",
	"description": "A Svelte reactive rune that keep its value through pages and reloads",
	"license": "MIT",
	"author": "andrescera",
	"homepage": "https://github.com/andrescera/svelte-persistent-runes",
	"repository": {
		"type": "git",
		"url": "https://github.com/andrescera/svelte-persistent-runes"
	},
	"bugs": "https://github.com/andrescera/svelte-persistent-runes/issues",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"default": "./dist/index.js"
		},
		"./preprocessor": {
			"types": "./dist/preprocessor.d.ts",
			"import": "./dist/preprocessor.mjs",
			"default": "./dist/preprocessor.js"
		},
		"./plugins": {
			"types": "./dist/plugins.d.ts",
			"import": "./dist/plugins.mjs",
			"default": "./dist/plugins.js"
		},
		"./options": {
			"types": "./dist/options.d.ts",
			"import": "./dist/options.mjs",
			"default": "./dist/options.js"
		}
	},
	"main": "dist/index.js",
	"files": [
		"dist/"
	],
	"scripts": {
		"build": "pkgroll --minify --clean-dist",
		"fix": "run-s fix:*",
		"fix:biome": "biome check --write .",
		"fix:pkg": "prettier-package-json --use-tabs --write ./package.json",
		"lint": "run-p --aggregate-output --continue-on-error --print-label lint:*",
		"lint:biome": "biome check .",
		"lint:pkg": "prettier-package-json --use-tabs ./package.json --list-different 1>/dev/null || prettier-package-json --use-tabs ./package.json | diff --color -u ./package.json -",
		"prepublishOnly": "npm run build",
		"test": "ava",
		"test:watch": "ava --watch"
	},
	"types": "dist/index.d.ts",
	"dependencies": {
		"@macfja/serializer": "^1.1.4",
		"browser-cookies": "^1.2.0",
		"cookie": "^1.1.1",
		"devalue": "^5.6.1",
		"esserializer": "^1.3.11",
		"magic-string": "^0.30.21",
		"next-json": "^0.5.1",
		"php-serialize": "^5.1.3",
		"serialize-anything": "^1.2.3",
		"sjcl-codec-hex": "^1.0.0",
		"sjcl-es": "^2.0.0",
		"superjson": "^2.2.6",
		"svelte": "^5.46.1"
	},
	"peerDependencies": {
		"vite": "^5 || ^6 || ^7"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"ava": "^6.4.1",
		"npm-run-all": "^4.1.5",
		"pkgroll": "^2.21.4",
		"prettier-package-json": "^2.8.0",
		"rollup": "^4.54.0",
		"tsimp": "^2.0.12",
		"typescript": "^5.9.3",
		"vite": "^7.3.0"
	},
	"keywords": [
		"cookie",
		"encryptedStorage",
		"localStorage",
		"persist",
		"persistent",
		"rune",
		"runes",
		"sessionStorage",
		"svelte",
		"sveltejs",
		"sveltekit"
	],
	"ava": {
		"extensions": {
			"ts": "module"
		},
		"nodeArguments": [
			"--import=tsimp"
		]
	}
}
